            android:textColor="@color/white"
            android:text="Icons - "/>
        <TextView
            android:layout_marginLeft="20dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_font"
            android:fontFamily="@font/nunitoregular"
            android:textColor="@color/white"
